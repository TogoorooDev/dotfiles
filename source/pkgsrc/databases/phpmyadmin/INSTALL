# $NetBSD: INSTALL,v 1.4 2018/12/10 19:27:46 tm Exp $

APACHE_USER=@APACHE_USER@
APACHE_GROUP=@APACHE_GROUP@
PMVARDIR=@PMVARDIR@

case ${STAGE} in
POST-INSTALL)
	if [ ! -d ${PMVARDIR}/tmp ]; then
		${MKDIR} -p ${PMVARDIR}/tmp
		${CHOWN} -R ${APACHE_USER}:${APACHE_GROUP} ${PMVARDIR}
		${CHMOD} -R 755 ${PMVARDIR}
	fi
	;;
esac
