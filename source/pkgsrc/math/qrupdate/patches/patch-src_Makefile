+	$(FC) $(FFLAGS) $(LDFLAGS) -shared -o $@ -Wl,-soname=libqrupdate.so.$(MAJOR) $(OBJS) \
 		$(BLAS) $(LAPACK)
 
 ../libqrupdate.dylib: $(OBJS)
